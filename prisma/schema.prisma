generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model PendingComment {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  comment   String
  pageName  String
  projectId Int?
  createdAt DateTime @default(now())
}
model ApprovedComment {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  comment    String
  pageName   String
  projectId Int?
  approvedAt DateTime
}


